<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

    <session-factory>
        <property name="connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="connection.url">jdbc:sqlserver://localhost:1433;</property>
        <property name="connection.username">kef</property>
        <property name="connection.password">kefkefkef</property>


        <property name="hbm2ddl.auto">none</property>
        <!-- <property name="show_sql">true</property> -->
        <property name="dialect">org.hibernate.dialect.SQLServerDialect</property>

        <mapping class="application.model.invoice.InvoiceProduct"></mapping>
        <mapping class="application.model.smast.Smast"></mapping>
        <mapping class="application.model.settings.Settings"></mapping>
    </session-factory>


</hibernate-configuration>